import telebot
from telebot import types


bot = telebot.TeleBot('7090418413:AAG4tAfm7BDZQeZ560VoMZg6-8HnHZ6y0Zo')


@bot.message_handler(commands=['start'])
def start(message):
    markup = types.ReplyKeyboardMarkup(resize_keyboard=True)
    btn1 = types.KeyboardButton('üö®')
    markup.row(btn1)
    file = open('./photo.jpg', 'rb')
    bot.send_photo(message.chat.id, file, f'–ü—Ä–∏–≤–µ—Ç, {message.from_user.first_name} :). –Ø –º–æ–≥—É —É–≥–∞–¥–∞—Ç—å —Ñ–∏–ª—å–º –ø–æ –æ–ø–∏—Å–∞–Ω–∏—é. –ß—Ç–æ–±—ã –Ω–∞—á–∞—Ç—å, –Ω–∞–∂–º–∏ –Ω–∞ –∫–Ω–æ–ø–æ—á–∫—É')


@bot.message_handler()
def handle_text_doc(message):
    if message.text == 'üö®':
        bot.send_message(message.chat.id, '–¢–µ–ø–µ—Ä—å, –ø—Ä–∏—à–ª–∏ –æ–ø–∏—Å–∞–Ω–∏–µ –∑–∞–≥–∞–¥–∞–Ω–Ω–æ–≥–æ —Ñ–∏–ª—å–º–∞')



bot.infinity_polling(none_stop=True)
